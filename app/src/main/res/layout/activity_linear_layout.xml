<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".LinearLayout"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="5pt"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="100pt"
        android:layout_height="10pt"
        android:layout_marginVertical="8pt"
        android:layout_marginLeft="8pt"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="8pt"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15pt"
        android:layout_height="15pt"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="5pt"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />


</LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:text="Иван,"
        android:textColor="#000000"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:text="приветствуем в нашем приложении"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_marginLeft="12pt"
            android:layout_weight="1"
            tools:srcCompat="@drawable/images"

            />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_weight="1"
            android:layout_marginLeft="12pt"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="8pt"
        android:backgroundTint="#7E7E7E"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Предложения"
        android:textColor="#000000"
        android:layout_marginLeft="8pt"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_marginLeft="15pt"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_weight="1"
            android:layout_marginLeft="12pt"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginVertical="5pt"
            android:layout_weight="1"
            android:layout_marginLeft="12pt"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
    <Button
        android:id="@+id/button10"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="8pt"
        android:backgroundTint="#7E7E7E"
        android:text="" />
    <Button
        android:id="@+id/button11"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5pt"
        android:layout_marginLeft="8pt"
        android:backgroundTint="#7E7E7E"
        android:text="" />
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginVertical="5pt"
        android:layout_weight="1"
        android:layout_marginLeft="5pt"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подробная информация"
        android:textColor="#000000"
        android:layout_marginLeft="8pt"
        android:layout_marginBottom="8pt"
        android:textSize="15sp"/>
</LinearLayout>